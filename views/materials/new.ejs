<% layout('layouts/boilerplate') %>

<div class="container vh-75">
  <h2 class="my-4">Nova matéria prima</h2>
  <form action="/dashboard/materials" method="POST">
    <div class="row">
      <div class="col-4 mb-4">
        <div class="form-group">
          <label for="name">Nome da matéria prima: </label>
          <input
            class="form-control"
            type="text"
            name="name"
            id="name"
            required
          />
        </div>
      </div>

      <div class="col">
        <div class="form-group">
          <label for="buyUnit">Unidade de compra: </label>
          <select class="form-control" type="text" name="buyUnit" id="buyUnit">
            <option value="unity">Unidade (un)</option>
            <option value="square">Pedaço (mm2)</option>
            <option value="meter">Metro linear (mm)</option>
            <option value="weight">Peso (g)</option>
            <!-- <option value="liter">Litro (L)</option> -->
          </select>
          <small class="form-text text-muted"
            >Selecione de que forma a matéria prima é vendida</small
          >
        </div>
      </div>
    </div>
    <div id="boxes">
      <!-- Compra em metros ------------------------------------------------------------------- -->
      <div class="form-group border p-3" id="meter">
        <h5>Dados do material</h5>
        <p>Informe o tamanho da peça (em milimetros):</p>
        <div class="row">
          <div class="col">
            <label for="lenght">Comprimento: </label>
            <input
              class="form-control"
              type="number"
              name="size[lenght]"
              id="lenght"
            />
          </div>
          <div class="col">
            <label for="width">Largura: </label>
            <input
              class="form-control"
              type="number"
              name="size[width]"
              id="width"
            />
          <div class="col">
            <label for="weight">Peso: </label>
            <input
              class="form-control"
              type="number"
              name="size[weight]"
              id="weight"
            />
          </div>
        </div>
        <small class="form-text text-muted">
          Use vírgula para indicar os centímetros. Ex.: 1 metro e 40 centímetros
          = 1,40.
        </small>
      </div>

      <!-- FINAL DO FORMULÁRIO ----------------------------------------------------------- -->
    </div>

    <div class="row">
      <!-- <div class="col">
                <div class="form-group">
                    <label for="quantity">Quantidade comprada: </label>
                    <input class="form-control" type="number" name="quantity" id="quantity" value="0" step="0.01">
                </div>
            </div> -->
      <div class="col-3">
        <div class="form-group">
          <label for="price">Valor unitário: </label>
          <input
            class="form-control"
            type="number"
            name="price"
            id="price"
            value="0.00"
            step="0.01"
            required
          />
        </div>
      </div>
    </div>
    <button class="btn btn-success">Cadastrar</button>
  </form>
</div>
