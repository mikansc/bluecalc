<% layout('layouts/boilerplate') %>

<div class="container vh-75">
  <h2 class="my-4">Nova matéria prima - Unidade</h2>
  <form action="/dashboard/materials" method="POST">
    <div class="row">
      <div class="col-4">
        <div class="form-group">
          <label for="name">Nome da matéria prima: </label>
          <input
            class="form-control"
            type="text"
            name="name"
            id="name"
            required
          />
        </div>
      </div>

      <div class="col-3">
        <div class="form-group">
          <label for="buyUnit">Unidade de compra: </label>
          <input
            class="form-control"
            readonly
            type="text"
            name="buyUnit"
            id="buyUnit"
            value="Unidade"
          />
          <!-- <small class="form-text text-muted"
            >Selecione de que forma a matéria prima é vendida</small
          > -->
        </div>
      </div>
    </div>
    <div id="boxes">
      <!-- Compra em unidade ------------------------------------------------------------------- -->
      <div class="form-group border p-3" id="unity">
        <h5>Compra por unidade</h5>
        <p>Informe o valor unitário da peça.</p>
        <div class="row">
          <div class="col-3">
            <div class="form-group">
              <label for="price">Valor unitário: </label>
              <input
                class="form-control"
                type="number"
                name="price"
                id="price"
                value="0"
                step="0.01"
                required
              />
            </div>
          </div>
          <!-- <div class="col-4">
            <label for="unityWidth">Comprimento: </label>
            <input
              class="form-control"
              type="number"
              name="size[width]"
              id="unityWidth"
              value="0"
              step="0.01"
            />
          </div> -->
        </div>
        <!-- <small class="form-text text-muted">
          Multiplique a quantidade em metros por 1.000. <br />
          Exemplo: 1 metro = 1000 milímetros; 2,5 metros = 2500 milímetros.
        </small> -->
      </div>

      <!-- FINAL DO FORMULÁRIO ----------------------------------------------------------- -->
    </div>
    <button class="btn btn-success">Cadastrar</button>
    <a class="btn btn-warning" href="/dashboard/materials">Cancelar</a>
  </form>
</div>
